        </columns>
      </TableView>
      <Pane prefHeight="202.0" prefWidth="550.0">
         <children>
            <Button fx:id="btnSalvar" layoutX="38.0" layoutY="127.0" mnemonicParsing="false" onAction="#onbtnSalvarAction" prefHeight="25.0" prefWidth="80.0" text="Salvar" />
